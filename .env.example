# Database
DATABASE_URL="postgresql://user:password@host:5432/kepco_security?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/kepco_security?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Admin Default (첫 실행 시 자동 생성)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme123!"  # 반드시 변경하세요

# Python Runtime (Vercel)
PYTHON_VERSION="3.11"

# 보안 설정
ENCRYPTION_KEY="your-32-character-encryption-key"  # 32자 이상
JWT_SECRET="your-jwt-secret-key"

# 로그 보관 기간 (일)
LOG_RETENTION_DAYS="90"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Supabase (선택)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# 기능 플래그
FEATURE_IMAGE_UPLOAD="true"
FEATURE_OCR="false"  # OCR API 사용 시 true
FEATURE_USER_AUTH="false"  # 사용자 로그인 필요 시 true

